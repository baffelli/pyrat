### Find the shift between two SLCs
rule slc_shift:
    input:
        slave_slc = 'slc_desq/{slcname2}.slc',
        master_slc = 'slc_desq/{slcname1}.slc',
        slave_slc_par = 'slc_desq/{slcname2}.slc.par',
        master_slc_par = 'slc_desq/{slcname1}.slc.par',
    output:
