        raw = "raw/{dataname}.raw",
        raw_par = "raw/{dataname}.raw_par",
    output:
        chan = "raw_chan/{dataname}_{chan}.raw",
        chan_par = "raw_chan/{dataname}_{chan}.raw_par"
    script:
        './wrappers/extract_channel.py'



